generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Measurement {
  measure_uuid   String   @id @default(uuid())
  customer_code  String
  measure_datetime DateTime
  measure_type   String
  image          String?
  has_confirmed  Boolean  @default(false)
  image_url      String?
  measure_value Int?

  confirmed_value ConfirmedValue?

  @@index([customer_code])
}

model ConfirmedValue {
  measure_uuid   String  @id
  confirmed_value Int
  measurement    Measurement @relation(fields: [measure_uuid], references: [measure_uuid])

  @@index([measure_uuid])
}